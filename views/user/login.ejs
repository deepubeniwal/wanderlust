<% layout("/layouts/boilerplate") %>
<div style="height: 90vh;" class="signup-container">

    <div class="row mt-4">
        <h1 class="col-6 offset-3 my-3">LogIn On Wanderlust</h1>
        <div class="col-6 offset-3 my-2">
            <form action="/login" method="post" novalidate class="nedds-validation">
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" name="username" id="username" class="form-control"
                    required>
    
                   
                </div>
               
    
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="password" id="password" class="form-control"
                    required>
    
                    
                </div>
                <button class="btn btn-primary col-4 offset-3 my-3">Login</button>
            </form>
        </div>
    </div>
</div>
